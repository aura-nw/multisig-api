{
  "name": "pyxis-safe-api",
  "version": "0.0.1",
  "description": "Pyxis Safe Backend API",
  "author": {
    "name": "Aura Network",
    "email": "admin@aura.network"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate": "ts-node node_modules/typeorm/cli.js -f ormconfig migration:generate -d src/migrations -n",
    "migration:create": "ts-node node_modules/typeorm/cli.js migration:create",
    "migration:revert": "ts-node node_modules/typeorm/cli.js -f ormconfig migration:revert"
  },
  "dependencies": {
    "@cosmjs/amino": "^0.26.5",
    "@cosmjs/cosmwasm": "^0.25.6",
    "@cosmjs/cosmwasm-stargate": "^0.28.1",
    "@cosmjs/crypto": "^0.28.1",
    "@cosmjs/encoding": "^0.28.1",
    "@cosmjs/stargate": "0.28.11",
    "@keplr-wallet/cosmos": "^0.11.1",
    "@keplr-wallet/crypto": "^0.10.14",
    "@nestjs/axios": "0.1.0",
    "@nestjs/common": "9.0.11",
    "@nestjs/core": "9.0.11",
    "@nestjs/jwt": "9.0.0",
    "@nestjs/passport": "9.0.0",
    "@nestjs/platform-express": "9.0.11",
    "@nestjs/swagger": "6.0.5",
    "@nestjs/typeorm": "9.0.1",
    "@terra-money/terra.js": "^3.0.7",
    "@tharsis/address-converter": "^0.1.8",
    "axios": "^0.21.4",
    "cache-manager": "^3.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "ethereumjs-util": "^7.1.5",
    "follow-redirects": "^1.14.7",
    "graceful-fs": "^4.2.10",
    "mysql2": "^2.3.3",
    "node-fetch": "^2.6.7",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "request-context": "^2.0.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "shelljs": "^0.8.5",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.1",
    "@nestjs/testing": "^9.0.11",
    "@types/cache-manager": "^3.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/migrations/"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}